@model User

@{
    ViewData["Title"] = "Profile";
    var Requestable = !User.Claims.Any(c => c.Type == ClaimTypes.Role && (c.Value == "Admin" || c.Value == "Developer" || c.Value == "Writer" || c.Value == "CEO"));
}

<div class="container my-5">
    <!-- Profile Header -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-primary text-white text-center py-4">
                    <h1 class="mb-0">
                        <i class="fas fa-user-circle mr-3"></i>Profile Information
                    </h1>
                </div>
                <div class="card-body p-5">
                    <div class="row align-items-center mb-4">
                        <div class="col-md-3 text-center">
                            <img src="@ViewBag.AvatarUrl" class="rounded-circle shadow" alt="User Avatar" 
                                 style="width: 120px; height: 120px; object-fit: cover; border: 4px solid #fff;">
                        </div>
                        <div class="col-md-9">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-user mr-2"></i>Name
                                    </label>
                                    <div class="form-control-plaintext fw-bold">@Model.Name</div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-user-tag mr-2"></i>Surname
                                    </label>
                                    <div class="form-control-plaintext fw-bold">@Model.Surname</div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-envelope mr-2"></i>Email
                                    </label>
                                    <div class="form-control-plaintext fw-bold">@Model.Email</div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">
                                        <i class="fas fa-shield-alt mr-2"></i>Email Status
                                    </label>
                                    <div>
                                        @if(Model.EmailVerified)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle mr-1"></i>Verified
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fas fa-exclamation-triangle mr-1"></i>Not Verified
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="d-flex flex-wrap gap-2 justify-content-center">
                                @if(Model.EmailVerified == false)
                                {
                                    <a href="@Url.Action("SendEmail", "Identity", new { userEmail = Model?.Email, subject = "Email verification"})" 
                                       class="btn btn-warning btn-lg">
                                        <i class="fas fa-envelope mr-2"></i>Verify Email
                                    </a>
                                }
                                
                                @if (ViewBag.IsCurrentAccount)
                                {
                                    @if (Requestable)
                                    {
                                        @if (!ViewBag.HasPendingRequest)
                                        {
                                            <a href="@Url.Action("RequestWriter", "Identity", new { id = Model?.Id })"
                                               class="btn btn-primary btn-lg">
                                                <i class="fas fa-pen-fancy mr-2"></i>Request Writer Role
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-secondary btn-lg" disabled>
                                                <i class="fas fa-clock mr-2"></i>Request Pending
                                            </button>
                                        }
                                    }
                                    
                                    <a href="@Url.Action("Logout", "Identity")" class="btn btn-danger btn-lg">
                                        <i class="fas fa-sign-out-alt mr-2"></i>Logout
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Books Section -->
    <div class="row mt-5">
        <!-- Purchased Books -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-header bg-gradient-success text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-book-open mr-2"></i>Purchased Books
                        <span class="badge bg-light text-dark float-right">@(ViewBag.PurchasedBooks?.Count ?? 0)</span>
                    </h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.PurchasedBooks != null && ViewBag.PurchasedBooks.Count > 0)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var item in ViewBag.PurchasedBooks)
                            {
                                @if(item != null)
                                {
                                    <a href="@Url.Action("GetById", "Book", new { id = item.Id })" 
                                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="fas fa-book mr-2 text-primary"></i>
                                            <strong>@item.Name</strong>
                                        </div>
                                        <i class="fas fa-chevron-right text-muted"></i>
                                    </a>
                                }
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-book-open fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No purchased books yet.</p>
                            <a href="@Url.Action("Index", "Book")" class="btn btn-outline-primary">
                                <i class="fas fa-shopping-cart mr-2"></i>Browse Books
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Wishlist Books -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-header bg-gradient-info text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-heart mr-2"></i>Wishlist
                        <span class="badge bg-light text-dark float-right">@(ViewBag.Wishlist?.Count ?? 0)</span>
                    </h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.Wishlist != null && ViewBag.Wishlist.Count > 0)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var item in ViewBag.Wishlist)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <a href="@Url.Action("GetById", "Book", new { id = item.Id })" 
                                       class="text-decoration-none flex-grow-1">
                                        <i class="fas fa-heart mr-2 text-danger"></i>
                                        <strong>@item.Name</strong>
                                    </a>
                                    @using (Html.BeginForm("RemoveFromWishlistBook", "Identity", FormMethod.Post, new { style = "display: inline;" }))
                                    {
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                onclick="return confirm('Remove from wishlist?')">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-heart fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Your wishlist is empty.</p>
                            <a href="@Url.Action("Index", "Book")" class="btn btn-outline-info">
                                <i class="fas fa-plus mr-2"></i>Add Books
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Success Message -->
    @if (ViewBag.Message != null)
    {
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle mr-2"></i>
                    @ViewBag.Message
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    }
</div>

<style>
.bg-gradient-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.bg-gradient-success {
    background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
}

.bg-gradient-info {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.card {
    border-radius: 15px;
    overflow: hidden;
}

.card-header {
    border-bottom: none;
}

.list-group-item {
    border: none;
    border-bottom: 1px solid #f8f9fa;
    transition: all 0.3s ease;
}

.list-group-item:hover {
    background-color: #f8f9fa;
    transform: translateX(5px);
}

.list-group-item:last-child {
    border-bottom: none;
}

.btn {
    border-radius: 25px;
    font-weight: 500;
    transition: all 0.3s ease;
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.badge {
    border-radius: 20px;
    font-size: 0.8rem;
}

.form-control-plaintext {
    background: transparent;
    border: none;
    padding: 0.375rem 0;
    color: #495057;
}

.form-label {
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 0.25rem;
}
</style>
